<%= render 'shared/navbar' %>
<div class="container">
  <a href="javascript:history.go(-1)"><i class="fas fa-arrow-left"></i></i></a>
  <% @order.items.each do |item| %>
    <% new_hash = eval(item) %>
    <ul class="list-group mt-3 mb-5">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <img src="<%= new_hash[:images].first %>" class="img-cart mt-3 mr-5"> <%= new_hash[:name] %>
        <div class="right-side d-flex align-items-center">
          <span class="mr-5"><%= new_hash[:amount] / 100 %> €</span>
          <span class="badge badge-primary badge-pill mr-5">
            x <%= new_hash[:quantity] %>
          </span>
        </div>
      </li>
    </ul>
  <% end %>
  <div class="mt-3 mb-5">
    <h2>Commande #<%= @order.id %></h2>
    <h3>Statut : <div class="badge badge-primary"><%= @order.state %></div></h3>
    <br>
    <ul class="list-unstyled">
      <li><strong>Date : </strong> <%= @order.created_at.to_date %></li><br>
      <li><strong>TOTAL : </strong> <%= humanized_money_with_symbol @order.amount %></li>
      </li>
    </ul>
    <p>Livraison estimée le <strong><%= @order.created_at.to_date %></strong></p>
  </div>
</div>
<%= render 'shared/footer' %>
