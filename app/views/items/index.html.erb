<div class="container">
  <h1>Tous</h1>
  <div class="card-div row">
    <% @items.each do |item|%>
      <div class="col-md-6">
        <%= link_to item_path(item.id), class:"link-to" do %>
          <div class="card-trip">
            <img src="<%= item.image %>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= item.name %></h2>
                <p><%= item.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= humanized_money_with_symbol(item.price) %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
