  <div class="card-div row">
    <% @items.each do |item|%>
      <div class="col-md-6">
        <%= link_to item_path(item.id), class:"link-to" do %>
          <div class="card-trip">
            <img src="<%= item.image %>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= item.name %></h2>
                <p><%= item.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= item.price %>â‚¬</h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
